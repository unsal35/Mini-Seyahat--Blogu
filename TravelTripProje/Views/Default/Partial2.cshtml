@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Partial2</title>
</head>
<body>
    @foreach (var item in Model)
    {


    <div class="right">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Baslik</h4>
            <span class="doller" style="font-size:15px">@item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetay/@item.id"><span class="read">Devamını Oku</span></a></p>
        </div>

    </div>
    }
</body>
</html>
