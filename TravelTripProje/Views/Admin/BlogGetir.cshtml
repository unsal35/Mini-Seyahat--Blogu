@model TravelTripProje.Models.Siniflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Blog Güncelle</h2>
<br />
@using (Html.BeginForm("Guncelle", "Admin", FormMethod.Post))
{
@Html.LabelFor(p => p.id)
@Html.TextBoxFor(p => p.id, new { @class = "form-control",@readonly="readonly" })
@Html.LabelFor(p => p.Baslik)
@Html.TextBoxFor(p => p.Baslik, new { @class = "form-control" })
@Html.LabelFor(p => p.Tarih)
@Html.TextBoxFor(p => p.Tarih, new { @class = "form-control" })
@Html.LabelFor(p => p.BlogImage)
@Html.TextBoxFor(p => p.BlogImage, new { @class = "form-control" })
@Html.LabelFor(p => p.Aciklama)
@Html.TextAreaFor(p => p.Aciklama, 15, 1, new { @class = "form-control" })
<br />
<button class="btn btn-primary">Blogu Güncelle</button>
}

